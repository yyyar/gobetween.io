.documentation
  padding 60px 0

  & .section-title
    margin-bottom 60px

  &-side-bar

    & ul
      font-family $font-sansPro
      font-size 19px

    & li
      padding 18px 20px 18px 30px
      border-bottom solid 1px #b6cedc

      & li
        border-bottom none
        padding-left 0

    & a
      color #0c6dbf
      text-decoration none

      &:hover,
      &:active
        color #0d8dee
        text-decoration underline


  &-content

    & *
      font-family $font-sansPro
      font-size 19px
      color #5b5b5b

    & p
      margin-bottom 15px

    & h2
      font-size 25px
      font-weight bold
      color #0c6dbf
      margin-bottom 30px

    & ul
      padding-left 20px
      margin-bottom 15px

    & li
      list-style disc
      margin-bottom 10px

      & li
        margin-bottom 10px

    & a
      color #0c6dbf !important

    & code
      background-color #e3e3e3
      font-size 17px
      color #5b5b5b
      padding 0 5px

    & pre
      background-color #e3e3e3
      padding 30px
      overflow auto
      margin 60px 0

      & code
        padding 0

    & strong
      font-weight bold




aside
  background-image linear-gradient(to bottom, rgba(222, 230, 242, 0.4), rgba(182, 235, 250, 0.21)), linear-gradient(rgba(17, 122, 201, 0.07), rgba(17, 122, 201, 0.07))

.doc-nav

  &-list
    font-family $font-sansPro
    font-size 19px

  &-item
    padding 18px 0 18px 30px
    border-bottom solid 1px #b6cedc

    & .doc-nav-list

      & .doc-nav-item
        border-bottom none
        padding-left 0

  &-link
    color #0c6dbf
    text-decoration none

    &:hover,
    &:active
      color #0d8dee
      text-decoration underline


@media (min-width: 768px)
  aside
    float left
    width 25%
    border-top solid 1px #b6cedc

  .documentation

    &-content
      width 70%
      float right