.documentation
  padding 40px 0 50px

  & .section-title
    margin-bottom 35px

  &-side-bar
    margin-bottom 40px

    & ul
      font-family $font-sansPro
      font-size 19px

      & ul
        margin-left 24px
        margin-top 12px

    & li
      color: #0c6dbf;
      padding 18px 20px 18px 30px
      border-bottom solid 1px #b6cedc

      & li
        border-bottom none
        padding-left 0

    & a
      color #0c6dbf
      text-decoration none

      &.active
        font-weight bold
        color #0c6dbf

      &:hover,
      &:active
        color #0d8dee
        text-decoration underline


  &-content

    &__wrap
      padding 0 30px

      & .documentation-content-title
        font-family $font-sansPro
        font-size: 30px
        font-weight bold
        color #0c6dbf
        margin-bottom 30px
        text-align center
        margin-top 0

      & *
        font-family $font-sansPro
        font-size 19px
        color #5b5b5b
        line-height normal

      & p
        margin-bottom 15px
        text-align justify

      & h2
        color #0c6dbf
        font-size 26px
        font-weight bold
        margin-bottom 26px
        text-align center

      & h3
        margin-top 32px
        margin-bottom 16px
        font-weight 600

      & h4, h5
        margin-top 32px
        margin-bottom 16px
        font-weight 600

      & ul
        padding-left 20px
        margin-bottom 15px

      & li
        list-style disc
        margin-bottom 10px

        & li
          margin-bottom 10px

      & a
        color #0c6dbf !important

      & code
        background-color #e3e3e3
        font-size 17px
        color #5b5b5b
        padding 0 5px
        font-family 'Courier New'

      & pre
        background-color #e3e3e3
        padding 10px
        overflow auto
        margin 21px 0px
        border solid 1px #a5a3a3

        & code
          padding 0

      & strong
        font-weight bold

      & img
        max-width 100%

section.documentation
  padding-left 0 !important
  padding-right 0 !important




aside
  background-image linear-gradient(to bottom, rgba(222, 230, 242, 0.4), rgba(182, 235, 250, 0.21)), linear-gradient(rgba(17, 122, 201, 0.07), rgba(17, 122, 201, 0.07))

.doc-nav

  &-list
    font-family $font-sansPro
    font-size 19px

  &-item
    padding 18px 0 18px 30px
    border-bottom solid 1px #b6cedc

    & .doc-nav-list

      & .doc-nav-item
        border-bottom none
        padding-left 0

  &-link
    color #0c6dbf
    text-decoration none

    &:hover,
    &:active
      color #0d8dee
      text-decoration underline


@media (min-width: 768px)
  aside
    float left
    width 25%
    border-top solid 1px #b6cedc

  .documentation
    padding 60px 0

    & .section-title
      margin-bottom 60px

    &-side-bar
      margin-bottom 0

    &-content

      &__wrap

        & .documentation-content-title
          text-align left

        width 70%
        float right

        & h2
          text-align left
